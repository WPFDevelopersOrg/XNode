<local:PropertyBarBase x:Class="XNode.SubSystem.NodeEditSystem.Control.PropertyBar.TextInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XNode.SubSystem.NodeEditSystem.Control.PropertyBar"
             mc:Ignorable="d"
             d:DesignWidth="320" Height="25">
    <Grid x:Name="MainGrid" Background="Transparent" MouseEnter="MainGrid_MouseEnter" MouseLeave="MainGrid_MouseLeave">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Block_Title" Text="标题" Foreground="#8c8c8c" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="Input_Value" Style="{StaticResource ParaBox}" Grid.Column="1"/>
    </Grid>
</local:PropertyBarBase>