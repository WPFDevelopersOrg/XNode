<UserControl x:Class="XLib.WPFControl.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XLib.WPFControl"
             mc:Ignorable="d"
             d:DesignHeight="2" d:DesignWidth="200">
    <Grid x:Name="MainGrid">
        <Grid x:Name="Progress_Box" Width="100" HorizontalAlignment="Left">
            <Grid x:Name="Progress_Inner" Background="#80C269" Width="200" HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</UserControl>